<h1>Login</h1>


<%= form_tag session_path do %>
  <div class='field'>
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>
  <div class='field'>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <button type="submit" class="btn btn-default" style="margin-top:20px;" ><%='Login' %></button>
<% end %>
